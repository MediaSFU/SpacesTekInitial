{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "noEmit": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "webrtc/webrtc": [
        "components/custom/webrtc/webrtc",
        "components/custom/webrtc/webrtc.web",
        "components/custom/webrtc/webrtc.ios",
        "components/custom/webrtc/webrtc.android"
      ]
    }
  },
  "include": [
    "src/**/*",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "types": [
    "react",
    "react-native"
  ],
  "typeRoots": [
    "node_modules/@types",
    "types"
  ]
}
